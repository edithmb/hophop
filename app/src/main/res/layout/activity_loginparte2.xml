<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imagenFondoL2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hop_hop_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/regresaralogin"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/regresar_blanca"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.986"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="284dp"
        android:fontFamily="@font/chewyregular"
        android:shadowColor="#658A9A"
        android:shadowDx="-10"
        android:shadowDy="10"
        android:shadowRadius="4"
        android:text="HOP HOP"
        android:textColor="@color/white"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="348dp"
        android:fontFamily="@font/fredokabold"
        android:text="Â¡Es hora de crear un nombre divertido!"
        android:textColor="@color/RojoPastel"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/EditTextApodo"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginTop="412dp"
        android:background="@drawable/edittext_rounded"
        android:fontFamily="@font/patrickhandregular"
        android:textAlignment="center"
        android:hint="Nombre divertido"
        android:textColorHint="#658A9A"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnContinuar2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="492dp"
        android:elevation="30dp"
        android:fontFamily="@font/patrickhandregular"
        android:text="Continuar"
        android:textAlignment="center"
        android:textSize="30dp"
        android:translationZ="10dp"
        app:backgroundTint="@color/RojoPastel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>