<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayoutInicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imagenFondo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hop_hop_inicio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ImageViewAjustes"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="76dp"
            android:src="@drawable/ajustes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.972"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="204dp"
            android:fontFamily="@font/chewyregular"
            android:shadowColor="#658A9A"
            android:shadowDx="-10"
            android:shadowDy="10"
            android:shadowRadius="4"
            android:text="HOP"
            android:textColor="@color/white"
            android:textSize="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.425"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="292dp"
            android:fontFamily="@font/chewyregular"
            android:shadowColor="#658A9A"
            android:shadowDx="-10"
            android:shadowDy="10"
            android:shadowRadius="4"
            android:text="HOP"
            android:textColor="@color/white"
            android:textSize="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.646"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnEmpezar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="464dp"
            android:fontFamily="@font/patrickhandregular"
            android:text="Empezar"
            android:textSize="45sp"
            android:textAlignment="center"
            android:elevation="30dp"
            android:translationZ="10dp"
            app:backgroundTint="@color/RojoPastel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnSalirI"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="556dp"
            android:fontFamily="@font/patrickhandregular"
            android:text="         Salir         "
            android:textAlignment="center"
            android:textSize="40sp"
            android:elevation="30dp"
            android:translationZ="10dp"
            app:backgroundTint="@color/NaranjaPastel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/menuLateralInicio"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:background="#CEF0FF"
        android:padding="24dp"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajustes"
            android:fontFamily="@font/fredokabold"
            android:textColor="@color/LetraMarron"
            android:textSize="40sp"
            android:gravity="center"
            android:layout_marginBottom="30dp"/>

        <Button
            android:id="@+id/btnVerMetricas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Metricas"
            app:backgroundTint="@color/NaranjaPastel"
            android:fontFamily="@font/patrickhandregular"
            android:textSize="20sp"/>

        <Switch
            android:id="@+id/switchMusica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MÃºsica"
            android:textColor="@color/LetraMarron"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/patrickhandregular"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnCerrarMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar"
            android:textSize="20sp"
            app:backgroundTint="@color/RojoPastel"
            android:fontFamily="@font/patrickhandregular" />

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>