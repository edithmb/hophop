<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <!-- Icono de advertencia -->
    <ImageView
        android:id="@+id/iconoAdvertencia"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/arbusto"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <!-- Título -->
    <TextView
        android:id="@+id/textoChoque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Chocaste!"
        android:textSize="26sp"
        android:textColor="#FF5252"
        android:textStyle="bold"
        android:fontFamily="@font/patrickhandregular"
        app:layout_constraintTop_toBottomOf="@id/iconoAdvertencia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"/>

    <!-- Vidas restantes -->
    <TextView
        android:id="@+id/txtVidasRestantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vidas restantes: 2"
        android:textSize="20sp"
        android:textColor="#4CAF50"
        android:textStyle="bold"
        android:fontFamily="@font/patrickhandregular"
        app:layout_constraintTop_toBottomOf="@id/textoChoque"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <!-- Puntuación actual -->
    <TextView
        android:id="@+id/txtPuntuacionActual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puntuación: 50"
        android:textSize="18sp"
        android:textColor="#333333"
        android:fontFamily="@font/patrickhandregular"
        app:layout_constraintTop_toBottomOf="@id/txtVidasRestantes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Botón Reintentar -->
    <Button
        android:id="@+id/btnReintentar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reintentar"
        android:textSize="18sp"
        android:fontFamily="@font/patrickhandregular"
        android:backgroundTint="#4CAF50"
        app:layout_constraintTop_toBottomOf="@id/txtPuntuacionActual"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Botón Abandonar -->
    <Button
        android:id="@+id/btnAbandonar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Abandonar"
        android:textSize="18sp"
        android:fontFamily="@font/patrickhandregular"
        android:backgroundTint="#FF9800"
        app:layout_constraintTop_toBottomOf="@id/btnReintentar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>