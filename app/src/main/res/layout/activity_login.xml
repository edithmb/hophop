<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imagenFondoL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hop_hop_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="284dp"
        android:fontFamily="@font/chewyregular"
        android:shadowColor="#658A9A"
        android:shadowDx="-10"
        android:shadowDy="10"
        android:shadowRadius="4"
        android:text="HOP HOP"
        android:textColor="@color/white"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/EditTextNombre"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginTop="396dp"
        android:background="@drawable/edittext_rounded"
        android:fontFamily="@font/patrickhandregular"
        android:hint="Escribe tu nombre"
        android:textAlignment="center"
        android:textColorHint="#658A9A"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnContinuar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="492dp"
        android:elevation="30dp"
        android:fontFamily="@font/patrickhandregular"
        android:text="Continuar"
        android:textAlignment="center"
        android:textSize="30dp"
        android:translationZ="10dp"
        app:backgroundTint="@color/RojoPastel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="556dp"
        android:elevation="8dp"
        android:fontFamily="@font/patrickhandregular"
        android:text="Ranking"
        android:textSize="30dp"
        android:translationZ="4dp"
        app:backgroundTint="@color/AmarilloPastel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>